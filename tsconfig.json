{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"declaration": false,
		"jsx": "react",
		"allowJs": true,
		"resolveJsonModule": true,
		"types": ["svelte"]
	},
	"include": ["src/**/*", "manifest.json"],
	"exclude": ["node_modules", "dist"]
}
