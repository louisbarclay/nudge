{
	"private": true,
	"scripts": {
		"build": "parcel build",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint src/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "parcel watch --no-hmr"
	},
	"type": "module",
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-xo",
			"stylelint-config-prettier"
		],
		"rules": {
			"function-whitespace-after": null,
			"media-feature-range-operator-space-after": null,
			"media-feature-range-operator-space-before": null
		}
	},
	"dependencies": {
		"@fontsource/inter": "^5.1.0",
		"@types/firefox-webext-browser": "^120.0.4",
		"lodash": "^4.17.21",
		"memoize": "^10.0.0",
		"node-fetch": "^3.3.2",
		"tslog": "^4.9.3",
		"webext-base-css": "^1.4.4",
		"webext-options-sync-per-domain": "^4.2.2",
		"webext-permissions": "^3.1.3"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.10.3",
		"@types/chrome": "^0.0.268",
		"@types/lodash": "^4.17.5",
		"@types/webextension-polyfill": "^0.10.7",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.10.3",
		"stylelint": "^15.11.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-xo": "^0.22.0",
		"webextension-polyfill": "^0.12.0",
		"xo": "^0.56.0"
	},
	"targets": {
		"default": {
			"source": "src/manifest.json",
			"distDir": "./dist"
		}
	},
	"webExt": {
		"sourceDir": "dist",
		"run": {
			"startUrl": [
				"https://github.com/fregante/browser-extension-template"
			]
		}
	}
}
