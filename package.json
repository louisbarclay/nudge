{
	"private": true,
	"scripts": {
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint src/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"dev": "vite dev",
		"build": "vite build"
	},
	"type": "module",
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-xo",
			"stylelint-config-prettier"
		],
		"rules": {
			"function-whitespace-after": null,
			"media-feature-range-operator-space-after": null,
			"media-feature-range-operator-space-before": null
		}
	},
	"dependencies": {
		"@fontsource/inter": "^5.1.0",
		"@types/firefox-webext-browser": "^120.0.4",
		"lodash": "^4.17.21",
		"memoize": "^10.0.0",
		"node-fetch": "^3.3.2",
		"svelte": "^5.2.3",
		"tslog": "^4.9.3",
		"webext-base-css": "^1.4.4",
		"webext-options-sync-per-domain": "^4.2.2",
		"webext-permissions": "^3.1.3"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^4.0.1",
		"@types/chrome": "^0.0.268",
		"@types/lodash": "^4.17.5",
		"@types/webextension-polyfill": "^0.10.7",
		"autoprefixer": "^10.4.20",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.4.15",
		"postcss": "^8.4.49",
		"stylelint": "^15.11.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-xo": "^0.22.0",
		"vite": "^5.4.11",
		"vite-plugin-web-extension": "^4.3.0",
		"webextension-polyfill": "^0.12.0",
		"xo": "^0.56.0"
	}
}
